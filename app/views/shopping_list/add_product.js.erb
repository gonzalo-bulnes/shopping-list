// toggle the product 'Add/Remove from the shopping list' icon button

// get the button
button = $('#products tr[data-id="<%= j params[:id] %>"] a[data-action="add-product-to-shopping-list"]');

// toggle the button action
button.attr('data-action', 'remove-product-from-shopping-list');
button.attr('href', '<%= remove_product_path(Product.find(j params[:id])) %>');
// toggle the button title
button.attr('title', 'Remove from the shopping list');

// toggle the button icon
button.find('i').toggleClass('icon-star-empty icon-star');
