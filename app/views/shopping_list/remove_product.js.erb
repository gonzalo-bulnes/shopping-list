// toggle the product 'Add/Remove from the shopping list' icon button
// toggle the action
$("#products tr[data-id=\"<%= j params[:id] %>\"] a[data-method=\"post\"]").attr('href', '<%= add_product_path(Product.find(j params[:id])) %>');
// toggle the icon
$("#products tr[data-id=\"<%= j params[:id] %>\"] a i").toggleClass('icon-star-empty icon-star');